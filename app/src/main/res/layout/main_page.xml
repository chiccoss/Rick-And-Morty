<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutConstraint"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <Button
        android:id="@+id/buttonEpisodes"
        android:layout_width="212dp"
        android:layout_height="69dp"
        android:layout_marginBottom="312dp"
        android:text="@string/episodes"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCharactes" />

    <Button
        android:id="@+id/buttonCharactes"
        android:layout_width="212dp"
        android:layout_height="69dp"
        android:text="@string/caracters"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEpisodes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLocation" />

    <Button
        android:id="@+id/buttonLocation"
        android:layout_width="202dp"
        android:layout_height="69dp"
        android:text="@string/locations"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCharactes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>